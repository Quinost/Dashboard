@page "/bugs"
@attribute [Authorize]

<table class="table shadow">
    <thead class="table-dark">
        <tr>
            <th class="align-middle first-column">
                <BugFiltrComponent Input="SystemList"  Output="((args) => FilterSelected(args)) "></BugFiltrComponent>
            </th>
            <th class="align-middle w-auto">Message</th>
            <th class="align-middle w-25">System</th>
            <th class="align-middle date-column">Date</th>
        </tr>
    </thead>
    <tbody>
        <Virtualize ItemsProvider="LoadBugs" Context="bug" ItemSize="100" OverscanCount="20">
            <ItemContent>
                <tr>
                    <td><button type="button" class="btn btn-sm btn-outline-dark" @onclick=@(() => ShowModal(bug.Id))>@bug.Id</button></td>
                    <td>@bug.Message</td>
                    <td>@bug.System</td>
                    <td>@bug.Date</td>
                </tr>
            </ItemContent>
            <Placeholder>
                <p>Loading bugs...</p>
            </Placeholder>
        </Virtualize>
    </tbody>
</table>
